<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToolBar?>

<HBox id="history-bar" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="0.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tech.octopusdragon.musicplayer.scenes.HistoryBoxController">
   <children>
      <HBox alignment="CENTER_LEFT" styleClass="button-box" minWidth="-Infinity">
         <children>
            <Button id="back-button" fx:id="backButton" mnemonicParsing="false" onAction="#back" text="←" />
            <Button id="forward-button" fx:id="forwardButton" mnemonicParsing="false" onAction="#forward" text="→" />
         </children>
      </HBox>
      <ToolBar fx:id="directoryBox" styleClass="directory-box" HBox.hgrow="SOMETIMES" minWidth="0.0" />
      <TextField fx:id="searchBar" id="search-bar" promptText="Search"  minWidth="-Infinity" />
   </children>
</HBox>
